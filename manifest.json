{
  "manifest_version": 3,
  "name": "Price & Food Compare",
  "version": "1.0.0",
  "description": "Compare prices on Amazon.in & Flipkart, and find similar dishes on Swiggy",
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID_HERE",
    "scopes": [
      "https://www.googleapis.com/auth/firebase.messaging"
    ]
  },
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "notifications",
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "host_permissions": [
    "https://www.amazon.in/*",
    "https://www.flipkart.com/*",
    "https://www.swiggy.com/*",
    "https://www.zomato.com/*",
    "https://www.croma.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.in/*"
      ],
      "js": [
        "content-scripts/amazon.js"
      ],
      "css": [
        "styles/content.css"
      ]
    },
    {
      "matches": [
        "https://www.croma.com/*"
      ],
      "js": [
        "content-scripts/croma.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://www.flipkart.com/*"
      ],
      "js": [
        "content-scripts/flipkart.js"
      ],
      "css": [
        "styles/content.css"
      ]
    },
    {
      "matches": [
        "https://www.swiggy.com/*"
      ],
      "js": [
        "content-scripts/swiggy.js"
      ],
      "css": [
        "styles/content.css"
      ]
    },
    {
      "matches": [
        "https://www.zomato.com/*"
      ],
      "js": [
        "content-scripts/zomato.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}